  .modal-dialog.modal-notify.modal-success{:role => "document"}
    / Content
    .modal-content
      / Header
      .modal-header.bcc-green.d-flex
        %div.col-10.text-center
          %b.p-0.fs-20.text-white= t('modals.header.modal_success')
        %div.col-2
          %button.close-modal{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            = image_tag('modals/close.png', width: 35, height: 35)
      / Body
      .modal-body
        .text-center
          = image_tag('modals/check.png', class: "p-3", width: 100, height: 100)
          %p.p-4= (flash[:alert] ||= flash[:notice] ||= flash[:successfully] )
    / /.Content